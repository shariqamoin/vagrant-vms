Vagrant.configure("2") do |config|
  # Global settings
  config.vm.box_check_update = false

  # Web01 - Ubuntu 20.04
  config.vm.define "web01" do |web01|
    web01.vm.box = "ubuntu/focal64"
    web01.vm.hostname = "web01.local"
    web01.vm.network "private_network", ip: "192.168.56.41"
    web01.vm.provider "virtualbox" do |vb|
      vb.name = "web01"
      vb.memory = 1024
      vb.cpus = 1
    end
  end

  # Web02 - Ubuntu 20.04
  config.vm.define "web02" do |web02|
    web02.vm.box = "ubuntu/focal64"
    web02.vm.hostname = "web02.local"
    web02.vm.network "private_network", ip: "192.168.56.42"
    web02.vm.provider "virtualbox" do |vb|
      vb.name = "web02"
      vb.memory = 1024
      vb.cpus = 1
    end
  end

  # Web03 - Ubuntu 20.04
  config.vm.define "web03" do |web03|
    web03.vm.box = "ubuntu/focal64"
    web03.vm.hostname = "web03.local"
    web03.vm.network "private_network", ip: "192.168.56.43"
    web03.vm.provider "virtualbox" do |vb|
      vb.name = "web03"
      vb.memory = 1024
      vb.cpus = 1
    end
  end

  # DB01 - CentOS 7 with provisioning
  config.vm.define "db01" do |db01|
    db01.vm.box = "centos/7"
    db01.vm.hostname = "db01.local"
    db01.vm.network "private_network", ip: "192.168.56.43"
    db01.vm.provider "virtualbox" do |vb|
      vb.name = "db01"
      vb.memory = 2048
      vb.cpus = 2
    end

    # Provisioning for db01
    db01.vm.provision "shell", inline: <<-SHELL
      echo ">>> Updating system..."
      yum -y update

      echo ">>> Installing MariaDB server..."
      yum install -y wget unzip mariadb-server -y

      systemctl start mariadb
      systemctl enable mariadb

      echo ">>> Installing Apache (optional web access)..."
      yum -y install httpd
      systemctl enable httpd
      systemctl start httpd

      echo ">>> Setting hostname inside VM..."
      hostnamectl set-hostname db01.local

      echo ">>> Provisioning complete!"
    SHELL
  end
end
